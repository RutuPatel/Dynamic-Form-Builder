@model Form_Builder.Models.UserModel
<html>
<head>
    <title>Reset</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/Resources/css/Account.css" rel="stylesheet" />
    <style>
        a:focus, a:hover {
            color: #ffffff;
            text-decoration: underline;
        }
    </style>  

    <script>
        function showPassword() {
            var key_attr = $('#key').attr('type');
            if (key_attr != 'text')
            {
                $('.checkbox').addClass('show');
                $('#key').attr('type', 'text');
            }
            else
            {
                $('.checkbox').removeClass('show');
                $('#key').attr('type', 'password');
            }
        }
    </script>

</head>

<body style="background-image:url('../../Resources/img/intro/intro5.jpg')">
    <div class="col-md-12">
        <section id="login">
            <div class="container">
                <div class="row">
                 @if(!string.IsNullOrEmpty(Model.Email))
                 { 
                 using (Html.BeginForm("Reset", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                 {
                            @Html.HiddenFor(model => model.Email)                          
                                    <div class="col-md-12">
                                <div class="form-wrap">
                                    <h1>Set New Password</h1>
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <form role="form" action="javascript:;" method="post" autocomplete="off">
                               
                                        <div class="form-group">
                                            <label for="key" class="sr-only">Password</label>
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", type = "password", name = "key", @id = "key", placeholder = "Enter the new password" })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:#1abc9c" })
                                              @*<input type="password" name="key" id="key" class="form-control" placeholder="Password">*@
                                        </div>                                        
                                        <div class="checkbox">
                                            <span class="character-checkbox" onclick="showPassword()"></span>
                                            <span class="label">Show password</span>
                                        </div>
                                        <input type="submit" id="btn-UpdatePassword" class="btn btn-custom btn-lg btn-block" value="Update Password">
                                    </form>                           
                                    <hr>
                                </div>
                            </div>
                     }
                 }
                    else
                    {
                        <div class="col-md-12">
                            <div class="form-wrap">
                                <span style="font-size:24px;color:#1abc9c"><center> Invalid User Identification , Plese try Later!</center></span>                               
                                <hr>
                            </div>
                        </div>
                      }
                </div> <!-- /.row -->
            </div> <!-- /.container -->
        </section>

        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p>Page © - 2017</p>
                        <p>Powered by <strong><a href="http://www.aavitechsolutions.com/" target="_blank">AavitechSolutions</a></strong></p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
