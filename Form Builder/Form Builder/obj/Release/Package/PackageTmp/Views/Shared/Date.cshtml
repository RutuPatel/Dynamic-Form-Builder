                    <div class="DateReqTxt" style="color:red;font-size:12px"></div>
    @*<input type="text" class="datepicker form-control" name="date" id="datepicker" placeholder="MM/DD/YYYY">*@
                </label>
            </div>
          
        </div>
    </div>

