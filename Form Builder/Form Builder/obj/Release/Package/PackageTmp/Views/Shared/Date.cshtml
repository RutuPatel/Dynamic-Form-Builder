@using WebApplication1.Models
@model FormFieldModel


<script>
    $(document).ready(function () {
        $(".datepicker").datepicker({
            maxDate: '0',
            defaultDate: new Date(),
            yearRange: '1960:2019',
            changeYear: true,
        });

    });

</script>

@if (!Model.IsRunMode)
{
    <div id="DateBoxDiv" class="container col-md-12" style="background-color:#f7f6d4;height:80px;padding-top:20px;">
        <div class="col-md-10">
            <div class="container col-md-4">
                <form id="DB">
                    <div class="form-group">
                        <br /><br />
                        <label>Date</label><br /><br />
                        <input type="text" class="datepicker" disabled> &nbsp; <span class="fa fa-calendar"></span>
                    </div>
                </form>
            </div>
        </div>
        @Html.Partial("_ButtonPanel", Model)
    </div>
}
else
{
