@using WebApplication1.Models
@model FormFieldModel
@if (!Model.IsRunMode)
{
    <div id="TextBoxDiv" class="container col-md-12" style="background-color:#f7f6d4;height:80px;padding-top:18px;">
        <div class="col-md-10">
            <div class="container col-md-5">
                <form id="TB">
                    <div class="form-group">
                        <br />
                        <label>Upload a file</label><br /><br /><br />
                        <input type="file" disabled="disabled" accept="file_extension|audio/*|video/*|image/*|media_type" />
                    </div>
                </form>
            </div>
        </div>
        @Html.Partial("_ButtonPanel", Model)
    </div>
}
