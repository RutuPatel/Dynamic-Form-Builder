@model Form_Builder.Models.UserModel
<html>
<head>
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/Resources/css/Account.css" rel="stylesheet" />
    <script>
    function OnForgot() {
        debugger;
        var flag = true;
       
        if ($(".ForgotEmailtxt").val() == "") {
            flag = false;
            $(".ForgotEmailtxt").css("border-color", "red");
            $(".ForgotEmailReqTxt").text("Email is Required")
        }
        else {
            $(".ForgotEmailtxt").css("border-color", "");
            $(".ForgotEmailReqTxt").text("")
        }

        if (flag) {
            return true;
        }
        else {
            return false;
        }
    }
    </script>
    
</head>
<body style="background-image:url('../../Resources/img/intro/Win8BackGround-203040.png')">
   <div class="col-md-12">
     <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
               @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
               { 
                    <div class="form-wrap">
                        @Html.AntiForgeryToken()
                        @*@Html.ValidationSummary("", new { @style = "color:#1abc9c" })*@
                        <span style="font-size:32px;color:#1abc9c"><center>Forgot Your Password?</center></span>
                        <br />
                        <form role="form" action="javascript:;" method="post" autocomplete="off">                             
                              <div class="form-group"style="margin-left: 0px;margin-right:0px;">
                                <label for="email" class="sr-only">Email</label>                                  
                                  @Html.TextBoxFor(model => model.Email, new { @class = "form-control ForgotEmailtxt", name = "email", @id = "email", placeholder = "Enter Email to reset your password" })                                
                                  @Html.ValidationMessageFor(model => model.Email, "", new { @style = "color:#1abc9c" })
                                  <div class="ForgotEmailReqTxt" style="color:red"></div>
                            </div>                                               
                            <button id="Submit" class="btn btn-custom btn-lg btn-block" type="submit" onclick="return OnForgot()">Send Reset Link</button>                             
                           
                             @*<input type="submit" id="btn-forgotpassword" class="btn btn-custom btn-lg btn-block" value="Send Reset Link">*@
                        </form>   
                        <a href="@Url.Action("Index", "Home")" class="btn btn-md" style="background-color:#1abc9c;color:white"><span class="glyphicon glyphicon-chevron-left"></span>&nbsp; Back</a>
                                             
                        <hr>
                    </div>
               }
                </div> <!-- /.col-xs-12 -->
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </section>
   
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>Page © - 2017</p>
                    <p>Powered by <strong><a href="http://www.aavitechsolutions.com/" target="_blank">AavitechSolutions</a></strong></p>
                </div>
            </div>
        </div>
    </footer>
</div>
</body>
</html>
