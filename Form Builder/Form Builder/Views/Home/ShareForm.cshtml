@using WebApplication1.Models
@model FormModel
@using (Html.BeginForm("ShareForm", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Share your form</h4>
                </div>
                <div class="modal-body" @*style="margin-left: 0px;margin-right:0px;"*@>
                    <input type="text" class="form-control" placeholder="Enter your form details to share with users." /><br />
                    <div class="form-group col-md-12">
                        <div class="col-md-1"> <label>Url:</label></div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(modal=> modal.FormUrl, new { @class = "form-control", @placeholder = "your sharable link", @id = "txt" })
                            <h6>Click on copy link button and Ctrl+v on clipboard to share your url.</h6>
                        </div>
                        <div class="col-md-2"><button type="button" class="btn" id="link" onclick="copy();" style="padding: 3px 6px 3px 6px;">Copy Link</button></div>
                        @*<input type="text" class="form-control" id="txt" placeholder="your sharable link" />*@
                    </div>
                    <div class="form-group col-md-12">
                        <div class="col-md-1"><label>To:</label></div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(modal => modal.Sharetoemail, new { @class = "form-control", @placeholder = "Enter Email Address" })
                        @*<input type="text" class="form-control" placeholder="Enter Email Address" />*@
                    </div>
                </div>
                <br />
                <input type="submit" id="btn-Signup" class="btn btn-default" style="color:white; margin-left: 55px;" value="Share">
                @*<a href="@Url.Action("ShareForm","Home")" type="submit" class="btn btn-default" style="color:white; margin-left: 55px;">Submit</a>*@

            </div>
        </div>

    </div>

}