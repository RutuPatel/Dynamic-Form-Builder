@if (Isform)
{
    if (Model != null)
    {
        using (Html.BeginForm("GetResponse", "Home", FormMethod.Post, new { @class = "form-labels-on-top", @style = "border-radius: 15px;margin-top: 40px;margin-bottom: 40px;box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.3), 0 8px 24px 0 rgba(0, 0, 0, 0.24); border-style: solid;border - width: 10px;border-color:#4CAF50;" }))
        {
            <html>
            <body style="background-color:#f3f3f3">
                <link href="~/Resources/css/new/demo.css" rel="stylesheet" />
                <link href="~/Resources/css/new/form-labels-on-top.css" rel="stylesheet" />
                <div class="main-content" id="response">
                    <div class="form-title-row">
                        @Html.HiddenFor(model => model.FormName, new { @class = "form-control" })
                        @Html.HiddenFor(model => model.FormId, new { @class = "form-control" })
                        @Html.HiddenFor(model => model.Sharetoemail, new { @class = "form-control" })
                        <h1>@Html.DisplayFor(Model => Model.FormDescription)</h1>
                    </div>
                    <div class="form-row">
                        @if (Model.formField.Count > 0)
                        {
                            foreach (var item in Model.formField.OrderBy(x => x.SortIndex))
                            {
                                Html.RenderPartial("FormField", item);
                            }
                        }
                    </div>
                    <div class="form-row">
                        <button id="Submit" type="submit" onclick="return OnSave()">Submit Form</button>
                    </div>
                </div>
            </body>
        </html>
        }
    }
    else
    {
        @Html.Partial("Thanks")
    }
}
